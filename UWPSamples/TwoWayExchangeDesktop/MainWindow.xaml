<Window x:Class="TwoWayExchangeDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoWayExchangeDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="60"></Setter>
            <Setter Property="Margin" Value="8"></Setter>
        </Style>
    </Window.Resources>

    <StackPanel>
        <TextBox x:Name="textBoxSend"></TextBox>
        <Button Click="Button_Click">Send Message From Desktop To UWP</Button>
        <TextBox x:Name="textBoxReceive" AcceptsReturn="True"></TextBox>
    </StackPanel>
</Window>
