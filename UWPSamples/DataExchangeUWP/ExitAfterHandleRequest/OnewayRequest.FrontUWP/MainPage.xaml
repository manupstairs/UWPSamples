<Page
    x:Class="OnewayRequest.FrontUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OnewayRequest.FrontUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="200"></Setter>
            <Setter Property="Height" Value="60"></Setter>
            <Setter Property="Margin" Value="8"></Setter>
        </Style>
    </Page.Resources>

    <StackPanel>
        <ComboBox>
            <ComboBoxItem>ControlPanel</ComboBoxItem>
            <ComboBoxItem>mspaint.exe</ComboBoxItem>
        </ComboBox>
        <Button Click="ButtonLaunchApp_Click">LaunchApp</Button>
    </StackPanel>
</Page>
